{
  "manifest_version": 2,
  "name": "Scrapbook",
  "version": "1.0",
  "description": "Scrapbook",
  "homepage_url": "https://github.com/fzzzy/scrapbook",
  "icons": {
    "48": "icons/scrapbook-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "sidebar_action": {
    "default_icon": "icons/scrapbook-32.png",
    "default_title": "Scrapbook",
    "default_panel": "scrapbook.html"
  },

  "browser_action": {
    "default_icon": "icons/scrapbook-32.png",
    "default_title": "Scrapbook",
    "browser_style": true
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "icons/selection.gif"
  ]
}
